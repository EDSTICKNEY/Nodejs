<!DOCTYPE HTML>
<html>

<head>

  <meta charset="utf-8">
  <script src="index.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<body>
  <label class="form-label">
    Search library by:
  </label>
<form method="post" action="">
  <div class="form-check">
  <input class="form-check-input" type="radio" name="Radios" id="Author" value="Author" checked>
  <label class="form-check-label" for="Author">
    Author
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="Radios" id="Publisher" value="Publisher">
  <label class="form-check-label" for="Publisher">
    Publisher
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="Radios" id="Year" value="Year">
  <label class="form-check-label" for="Year">
    Year
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="Radios" id="Key_Word" value="Key_Word">
  <label class="form-check-label" for="Key_Word">
    Key Word
  </label>
  <form class="form-inline">
    <div class="form-group mx-sm-3 mb-2">
      <label for="input" class="sr-only"></label>
      <input type="search" class="form-control" name="SearchInput" id="SearchInput">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
  </form>
</form>


<ul>
<% for(var i=0; i<books.length; i++) {%>
   <li>
     <img src="<%= books[i].image %>">
     <h3><%= books[i].Name %></h3>
     <p><strong>Author: </strong><%= books[i].author %></p>
     <p><strong>Description: </strong><%= books[i].description %></p>
     <p><strong>Publisher: </strong><%= books[i].publisher %></p>
     <p><strong>Year: </strong><%= books[i].year %></p>
     <p><strong>Pages: </strong><%= books[i].pages %></p>
     <p><strong>Key Words: </strong><%= books[i].Key_Word %></p>
   </li>
<% } %>
</ul>
</body>

</html>
